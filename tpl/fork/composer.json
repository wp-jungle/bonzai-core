{
  "name": "{%= pkg.name %}",
  "type": "project",
  "description": "{%= pkg.description %}",
  "require": {
    "php": ">=5.6",
    "composer/installers": "v1.6.0",
    "vlucas/phpdotenv": "v3.1.0",
    "johnpbloch/wordpress": "5.0.3",
    "michelf/php-markdown": "1.8.0",
    "wpackagist-plugin/error-log-monitor": "1.6.3",
    "wpackagist-plugin/recently-edited-content-widget": "0.3.2",
    "wpackagist-plugin/right-now-reloaded": "2.2"
  },
  "config": {
    "preferred-install": "dist"
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org"
    }
  ],
  "extra": {
    "installer-paths": {
      "public/app/mu-plugins/{$name}/": [
        "type:wordpress-muplugin"
      ],
      "public/app/plugins/{$name}/": [
        "type:wordpress-plugin"
      ],
      "public/app/themes/{$name}/": [
        "type:wordpress-theme"
      ]
    },
    "wordpress-install-dir": "public/wp"
  },
  "autoload": {
    "psr-0": { "Michelf": "" }
  }
}
